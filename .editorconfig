# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{py,pyi}]
indent_size = 4
max_line_length = 88

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.{go}]
indent_style = tab
indent_size = 4

[*.{java,kt}]
indent_size = 4

[*.{cs,csx}]
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[*.{json}]
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.{sh,bash}]
indent_size = 2

[Makefile]
indent_style = tab

[*.{sql}]
indent_size = 2

[*.{xml,html,htm}]
indent_size = 2

[*.{css,scss,less}]
indent_size = 2